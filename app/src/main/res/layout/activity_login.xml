<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <View
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBD14B"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/facebook_login"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="login with facebook"
        android:textSize="15dp"
        app:backgroundTint="#3B5998"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/naver_login"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="login with Naver"
        app:backgroundTint="#2DB400"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="561dp" />

    <Button
        android:id="@+id/kakao_login"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="login with Kakaotalk"
        app:backgroundTint="#562400"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="613dp" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:text="로그인"
        app:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="343dp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:text="회원가입"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="395dp" />

    <TextView
        android:id="@+id/search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호 찾기>"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="460dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="#818181"
        android:foreground="#818181"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="489dp" />

</androidx.constraintlayout.widget.ConstraintLayout>