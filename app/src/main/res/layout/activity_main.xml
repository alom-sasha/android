<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--top toolbar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">
            <include layout="@layout/layout_top_tabs"/>

            <RelativeLayout
                android:layout_below="@+id/relLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_light_onoff"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="light"
                    android:textSize="10dp" />
                <Button
                    android:id="@+id/btn_police_onoff"
                    android:layout_width="68dp"
                    android:textSize="10dp"
                    android:layout_toRightOf="@+id/btn_light_onoff"
                    android:layout_height="wrap_content"
                    android:text="police" />
                <Button
                    android:id="@+id/btn_cctv_onoff"
                    android:layout_width="68dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_police_onoff"
                    android:text="cctv" />
                <Button
                    android:id="@+id/btn_safeguard_onoff"
                    android:layout_width="68dp"
                    android:textSize="10dp"
                    android:layout_toRightOf="@+id/btn_cctv_onoff"
                    android:layout_height="wrap_content"
                    android:text="safeguard" />

                <Button
                    android:id="@+id/btn_alarmbell_onoff"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_safeguard_onoff"
                    android:text="alarmbell"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/btn_mode_onoff"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_alarmbell_onoff"
                    android:text="mode"
                    android:textSize="10dp" />

            </RelativeLayout>


        </RelativeLayout>
        <!--body-->



        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relLayout1"
            android:layout_above="@+id/relLayout3"
            >




        </FrameLayout>


        <!--bottom navigation bar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayout3"
            android:layout_alignParentBottom="true">
            <include layout="@layout/layout_bottom_navigation_view"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>